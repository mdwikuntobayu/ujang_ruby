<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
	<!--<%= render 'shared/error_messages' %>-->
	<div class ="field">
		<%= f.label :name %><%= error(:name)%><br/>
		<%= f.text_field :name %>
	</div>
	<div class ="field">
		<%= f.label :email %> <%= error(:email) %> <br/>
		<%= f.text_field :email %>
	</div>
	<div class ="field">
		<%= f.label :password %> <%= error(:password) %> <br/>
		<%= f.password_field :password %>
	</div>
	<div class ="field">
		<%= f.label :password_confirmation, "Confirm Password" %> <%= error(:password) %> <br/>
		<%= f.password_field :password_confirmation %>
	</div>
	<div class ="actions">
		<%= f.submit "Sign Up" %> 
	</div>
<% end %>
